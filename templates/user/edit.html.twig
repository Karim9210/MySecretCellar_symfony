{% extends 'layout.html.twig' %}

{% block content %}

	<div class="bg-lightPrimary ">
		<div class="bg-lightSecondary pt-4 w-100" style="height: 180px">
			<div style="border-bottom:solid; border-bottom-color:var(--prune)">
				<h1 class="pt-2 ps-2 mt-5 mx-5 text-prune" style="letter-spacing:5px">
					Mettre à jour son profil
				</h1>
			</div>
		</div>
	</div>
	<div class='p-5 mb-3 mt-3'>
		<div class="d-flex  justify-content-center align-items-center p-5 " style="height:100vh;">
			<div class="mb-5 p-2 d-flex flex-column  ">
				<div class="text-center ">
					<img src="{{ asset('build/images/secretCellarLogoregister.svg') }}" width="60%" alt="logo secretCellar">
				</div>
				<div class="container">
					{{ form_start(form) }}
					{{form_row(form.pseudo)}}
					{{form_row(form.email)}}
					{{ form_row(form.password) }}
					{{ form_row(form.avatarFile) }}
				</div>
				<div class="d-flex  justify-content-center ">
					<button class="btn text-white mb-3 mt-3 bg-prune m-2">{{ button_label|default('Mettre à jour') }}</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>{% endblock %}
