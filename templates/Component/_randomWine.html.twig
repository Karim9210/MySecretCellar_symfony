<div>
	<h2 class="text-prune">A déguster cette année</h2>
</div>
<div class="underLine" style="height: 2px; background-color: var(--prune); width:50%"></div>

<div class="d-flex flex-column justify-content-center flex-sm-row mt-2">
	<div class="d-flex align-self-center">
		<img src="{{ asset('build/images/bouteille.svg') }}" style="object-fit:contain" width="100" height="200"/>
	</div>

	<a style="text-decoration:none" href="{{ path('app_wine_show',{ id: randBottle.0.id }) }}">
		<div class=" d-flex flex-column mt-5 mt-sm-0 p-sm-4">
			<div class="d-flex flex-column">
				<h3 class="text-prune">
					{{randBottle.0.domaine}}
				</h3>
				<p class="text-prune">
					{{randBottle.0.vintage}}
				</p>
			</div>

			<span class="box ">
				{% if randBottle.0.ranking == "1" %}
					<i class="bi bi-star-fill text-warning"></i>
				{% endif %}
				{% if randBottle.0.ranking == "2" %}
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
				{% endif %}
				{% if randBottle.0.ranking == "3" %}
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
				{% endif %}
				{% if randBottle.0.ranking == "4" %}
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
				{% endif %}
				{% if randBottle.0.ranking == "5" %}
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
					<i class="bi bi-star-fill text-warning"></i>
				{% endif %}
			</span>
			<div class="flex text-prune">
				<p>
					{{randBottle.0.description}}
				</p>
				{# intégrer component stock #}
			</div>
		</div>
	</a>
</div>
