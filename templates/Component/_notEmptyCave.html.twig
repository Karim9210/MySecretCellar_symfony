<div
	class="bg-lightPrimary">
	{# header #}
	<div class="bg-lightSecondary pt-4 w-100" style="height: 180px">
		<div style="border-bottom:solid; border-bottom-color:var(--prune)">
			<h1 class="pt-2 ps-2 mt-5 mx-5 text-prune" style="letter-spacing:5px">
				Ma cave
			</h1>
		</div>
		<div class="d-flex p-2 justify-content-center align-items-center gap-3 ">

			{% for message in app.flashes('success') %}
				<div class="flash-notice">
					{{ message }}
				</div>
			{% endfor %}

		</div>
	</div>

	{# barre de recherche #}
	<div class="py-5">
		{{ form_start(form) }}

		<div class="d-flex p-2 justify-content-center align-items-center gap-3 ">

			<div class="d-flex mt-3">
				{{ form_row(form.search) }}</div>
			<button class="btn btn-prune d-none d-md-block " type="submit">
				Recherche
			</button>
			<button class=" btn btn-prune d-block d-md-none rounded " type="submit">
				<img src="{{ asset('build/images/icones/Loupe.svg')}}"/>
			</button>
			<button class="btn btn-prune d-none d-md-block " type="button" data-bs-toggle="modal" data-bs-target="#modal">
				Filtres
			</button>
			<button class=" btn btn-prune d-block d-md-none rounded " type="button" data-bs-toggle="modal" data-bs-target="#modal">
				<img src="{{ asset('build/images/icones/Filtres.svg')}}"/>
			</button>
			{{ form_end(form) }}
			{% for message in app.flashes('success') %}
				<div class="flash-notice">
					{{ message }}
				</div>
			{% endfor %}
		</div>

	</div>

	{% include 'Component/_cardWine.html.twig' %}

</div>

{# ****************** MODAL FILTRES ******************** #}
<div class="container text-dark">
	<div class="modal blur" id="modal">
		<div class=" modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header  text-center">
					<h2>Filtres</h2>
					<div class="btn-close" data-bs-dismiss="modal"></div>
				</div>
				<div class="modal-body">
					<form class="form" method="POST" action="">
						<select name="country" class="form-select my-3" aria-label="Default select example">
							<option selected value="">Pays</option>
							{% for country in countries %}
								<option value="{{country.id}}">
									{{country.labelCountry}}
								</option>
							{% endfor %}
						</select>

						<select name="region" class="form-select my-3" aria-label="Default select example">
							<option selected value="">RÃ©gion</option>
							{% for region in regions %}
								<option value="{{region.id}}">
									{{region.labelRegion}}
								</option>
							{% endfor %}
						</select>
						<select name="appellation" class="form-select my-3" aria-label="Default select example">
							<option selected value="">Appellation</option>
							{% for appellation in appellations %}
								<option value="{{appellation.id}}">
									{{appellation.labelAppellation}}
								</option>
							{% endfor %}

						</select>

						<select name="color" class="form-select my-3" aria-label="Default select example">
							<option selected value="">Couleur</option>
							{% for color in colors %}
								<option value="{{color.id}}">
									{{color.labelColor}}
								</option>
							{% endfor %}
						</select>

						<select name="type" class="form-select my-3" aria-label="Default select example">
							<option selected value="">Type</option>
							{% for type in types %}
								<option value="{{type.id}}">
									{{type.labelType}}
								</option>
							{% endfor %}
						</select>
						<button type="submit" class="btn btn-prune w-100  btn-sm">Filtrer</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
{# ****************** END modal filtres ******************** #}
