			<label for="region_id" class="form-label text-start p-1 mb-0 mt-1">Région :</label>
			{{ form_row(form.region) }}
			<label for="country_id" class="form-label text-start p-1 mb-0 mt-1">Pays :</label>
			{{ form_row(form.country) }}
		</div>
	</div>

