{{ form_start(form) }}
<div class="container rounded-3 col-md-6 mx-auto p-4 mt-5 border-start border-end shadow-lg text-prune ">

	<div class="row mb-3 d-flex flex-column flex-md-row">
		<div class="col d-flex flex-column align-content-center">
			<img src="{{ asset('build/images/bouteille.svg') }}" style="max-height:140px;" class="mt-5 mb-3 w-1 h-auto">
		</div>
		<div class="col">
			<label for="domaine" class="form-label text-start p-1 mb-0">Domaine :</label>
			{{ form_row(form.domaine,{'attr': {'placeholder':'Château Martillac...'}}) }}
			<label for="type" name="type" class="form-label text-start p-1 mb-0">Type :</label>
			{{ form_row(form.type) }}
			<label for="vintage" class="form-label text-start p-1 mb-0">Année:</label>
			{{ form_row(form.vintage,{'attr': {'placeholder':2005}}) }}
		</div>
	</div>

	<div class="row  p-2 mb-3 d-flex flex-column flex-md-row">
		<div class="col">
			<label for="couleur" name="couleur" class="form-label text-start p-1 mb-0">
