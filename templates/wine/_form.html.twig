									{# <input type="radio" name="rank"> #}
									<span class="etoile ms-1">
										<i class="bi bi-star-fill text-warning"></i>
									</span>
									<span class="etoile ms-1">
										<i class="bi bi-star-fill text-warning"></i>
									</span>
									<span class="etoile ms-1">
										<i class="bi bi-star-fill text-warning"></i>
									</span>
								</div>
